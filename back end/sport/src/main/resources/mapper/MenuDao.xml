<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hezong.dao.MenuDao">
            <!-- 一对多关系映射-->
    <resultMap id="menuMap" type="com.hezong.pojo.MainMenu">
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="path" property="path"></result>
        <collection property="sList" ofType="com.hezong.pojo.SubMenu">
            <id column="sid" property="id"></id>
            <result column="stitle" property="title"></result>
            <result column="spath" property="path"></result>
        </collection>

    </resultMap>
    <select id="getMenus" resultMap="menuMap">
        SELECT mainmenu.*,submenu.id AS sid,submenu.title AS stitle,submenu.path AS spath
        FROM mainmenu,submenu
        WHERE mainmenu.id=submenu.mid;
    </select>

</mapper>