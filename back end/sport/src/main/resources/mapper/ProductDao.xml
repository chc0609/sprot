<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hezong.dao.Product">
    <!--根据产品名称或者零件号获取产品信息-->
    <select id="getProductByMessage" resultType="com.hezong.pojo.Product">
        SELECT * FROM PRODUCT WHERE
            PRODNAME = #{productName} or OEM like %#{Oem}%;
    </select>

    <!--获取所有产品  pageStart:从哪里开始展示  pageSize：页面展示条数 -->
    <select id="getAllProduct" resultType="com.hezong.pojo.Product">
        SELECT * FROM PRODUCT
        <if test="productName !=null">
            WHERE PRODNAME LIKE #{productName}
        </if>
        LIMIT #{pageStart},#{pageSize}
    </select>

    <!--获取所有用户的个数-->
    <select id="getProductCounts" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM PRODUCT
        <if test="username !=null">
            WHERE username LIKE #{username}
        </if>
    </select>

    <!--更新用户状态-->
    <update id="updateState">
        UPDATE easyuser SET state=#{state} WHERE id=#{id}
    </update>

    <!--添加用户的方法-->
    <insert id="addUser">
            INSERT INTO easyuser
            (username,password,email,role,state)
            VALUES(#{username},#{password},#{email},#{role},#{state})
    </insert>

    <!--删除用户的方法-->
    <delete id="deleteUser" >
        DELETE FROM easyuser WHERE id=#{id}
    </delete>

    <!--修改用户前先查询出用户 -->
    <select id="getUpdateUser" resultType="com.hezong.pojo.Product">
        SELECT * FROM easyuser WHERE id=#{id}
    </select>

    <!--修改用户前，根据查询出的用户进行修改-->
    <update id="editUser">
        UPDATE easyuser SET username=#{username},password=#{password},email=#{email} WHERE id=#{id}
    </update>

</mapper>